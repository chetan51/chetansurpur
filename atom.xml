<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>The Blog of Chetan Surpur</title>
 <link href="http://chetansurpur.com/atom.xml" rel="self"/>
 <link href="http://chetansurpur.com"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://chetansurpur.com</id>
 <author>
   <name>Chetan Surpur</name>
   <email>chetan.surpur@gmail.com</email>
 </author>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://chetansurpur.com{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://chetansurpur.com{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>